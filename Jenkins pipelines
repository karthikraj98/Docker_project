pipeline {
    agent any
    
    tools {
        jdk 'jdk17'
        maven 'maven3'
    }
    
    stages {
        stage ('checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/karthikraj98/Docker_project.git'
            }
        }
        
        stage ('build the maven') {
            steps {
                dir('Projects/springboot-devops-project') {
                sh 'mvn clean package'
                }
            }
        }
        
        stage('SonarQube Scan') {
    steps {
        dir('Projects/springboot-devops-project') {

            withSonarQubeEnv('SonarQube') {   // MUST match Jenkins config name
                withCredentials([
                    string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')
                ]) {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=springboot-devops \
                        -Dsonar.projectName=springboot-devops \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }

        }
    }
}
        
        stage ('Build contianer image') {
            steps {
                dir('Projects/springboot-devops-project') {
                sh 'docker build -t springboot-devops:01 .' 
                }
            }
        }
        
        stage ('Deploy container') {
            steps {
                sh '''
                docker stop springboot || true 
                docker rm springboot || true 
                docker run -d --name springboot --rm -p 3004:8080 springboot-devops:01
                '''
            }
        }
    }
 }


